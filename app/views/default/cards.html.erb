<%- if params[:name] -%>
  Personalized business cards for <%= params[:name] -%>
<%- end -%>
<div>
  <pre class="card">
    <%- 5.times do -%>
<%= @horizontal_divider -%>
      <%- @card.each do |line| -%>
|<%= ([line] * 2).join('|').html_safe %>|
      <%- end -%>
|<%= (["just10cards.com".rjust(40)] * 2).join('|') -%>|
    <%- end -%>
<%= @horizontal_divider -%>
  </pre>
</div>
